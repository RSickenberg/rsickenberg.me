{
  "name": "@rsickenberg/portfolio-next",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "release": "dotenv release-it"
  },
  "dependencies": {
    "@astrojs/tailwind": "^2.1.3",
    "@tailwindcss/typography": "^0.5.8",
    "astro": "^1.9.0",
    "tailwindcss": "^3.2.4"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "preRelease": false,
      "draft": false
    },
    "git": {
      "requireCleanWorkingDir": false,
      "commitMessage": "Release ${version}",
      "tagName": "v${version}",
      "tag": true
    },
    "plugins": {
      "@release-it/keep-a-changelog": {
        "filename": "CHANGELOG.md",
        "strictLatest": false
      }
    }
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^3.1.0",
    "dotenv-cli": "^6.0.0",
    "release-it": "^15.6.0"
  }
}
