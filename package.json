{
  "name": "@rsickenberg/portfolio-next",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "release": "release-it --no-npm"
  },
  "dependencies": {
    "@astrojs/tailwind": "^2.1.3",
    "astro": "^1.9.0",
    "tailwindcss": "^3.2.4"
  },
  "release-it": {
    "github": {
      "release": true,
      "releaseName": "Release ${version}",
      "preRelease": false,
      "draft": false
    },
    "git": {
      "requireCleanWorkingDir": true,
      "commitMessage": "Release ${version}",
      "tagName": "v${version}",
      "tag": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md"
      }
    }
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^5.1.1",
    "release-it": "^15.6.0"
  }
}
