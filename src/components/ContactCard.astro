---
const {href, className, iconName, iconSize, iconClass, tooltip} = Astro.props;
import {Icon} from 'astro-icon/components'
---

<a href={href} class={className} data-tooltip-target={iconName} type="button">
    <Icon name={iconName} size={iconSize} class={iconClass}/>
</a>
<div id={iconName} role="tooltip" class="absolute z-10 invisible inline-block px-3 py-2 text-sm font-medium text-white transition-opacity duration-300 bg-gray-900 rounded-lg shadow-sm opacity-0 tooltip dark:bg-gray-700">
    {tooltip}
    <div class="tooltip-arrow" data-popper-arrow></div>
</div>

<script>
    import {Tooltip} from "flowbite";
</script>